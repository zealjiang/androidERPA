<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/choose_car_brand_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        >

        <TextView
            android:id="@+id/number"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/text_round_bg_style"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/clickable_layout_key"
            android:layout_toRightOf="@+id/number"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            />
        <ImageView
            android:id="@+id/choose_car_brand_text_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/jt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/tv_value"
            style="@style/clickable_layout_value"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="@dimen/smaple_pading"
            android:paddingBottom="@dimen/smaple_pading"
            android:layout_toRightOf="@id/tv_name"
            android:layout_toLeftOf="@id/choose_car_brand_text_jiantou"
            android:gravity="right"
            android:text=""
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerHeight"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:background="@color/common_gray_line"/>
    </RelativeLayout>
</LinearLayout>