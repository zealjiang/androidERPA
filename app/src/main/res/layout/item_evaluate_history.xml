<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvEvaluateNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A100861000110010"
        android:textColor="@color/black_font"
        android:textSize="@dimen/text_medium_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收购价:"
            android:textSize="@dimen/text_medium_14sp" />

        <TextView
            android:id="@+id/tvPurchasePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18.09万"
            android:textColor="@color/common_orange"
            android:textSize="@dimen/text_medium_14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="评估师:"
            android:textSize="@dimen/text_medium_14sp" />

        <TextView
            android:id="@+id/tvEvaluator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="李山美"
            android:textSize="@dimen/text_medium_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="预估整备费:"
            android:textSize="@dimen/text_medium_14sp" />

        <TextView
            android:id="@+id/tvSoldPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18.09万"
            android:textColor="@color/common_orange"
            android:textSize="@dimen/text_medium_14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="店铺:"
            android:textSize="@dimen/text_medium_14sp" />

        <TextView
            android:id="@+id/tvShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:text="李山美"
            android:textSize="@dimen/text_medium_14sp" />
    </LinearLayout>

</LinearLayout>