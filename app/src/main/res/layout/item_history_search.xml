<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dip"
              android:paddingLeft="@dimen/dp_15"
              android:paddingRight="@dimen/dp_15"
              android:paddingBottom="10dip"
              android:background="@color/white"
              android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_car_license_num"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="车牌号" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/common_grey_text_style"
            android:text=""
            android:textColor="@color/orange_9"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_evaluate_price"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="评估价" />
        <TextView
            android:id="@+id/tv_evaluate_date"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_evaluate_price_value"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/orange_9"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="15dip"
            android:layout_toRightOf="@id/tv_evaluate_price"
            android:layout_toLeftOf="@id/tv_evaluate_date"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_appraise"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="评估师" />
        <TextView
            android:id="@+id/tv_appraise_shop"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_appraise_name"
            style="@style/common_grey_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:layout_toRightOf="@id/tv_appraise"
            android:layout_toLeftOf="@id/tv_appraise_shop"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_salesman"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="销售人员" />
        <TextView
            android:id="@+id/tv_salesman_name"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="15dip"
            android:layout_toRightOf="@id/tv_salesman"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_purchasing_price"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="收购价" />
        <TextView
            android:id="@+id/tv_purchasing_date"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_purchasing_price_value"
            style="@style/common_grey_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/orange_9"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="15dip"
            android:layout_toRightOf="@id/tv_purchasing_price"
            android:layout_toLeftOf="@id/tv_purchasing_date"/>
    </RelativeLayout>
    <TextView
        style="@style/common_grey_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="评估说明" />
    <TextView
        android:id="@+id/tv_evaluate_explain"
        style="@style/common_light_grey_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentLeft="true"
        />
</LinearLayout>