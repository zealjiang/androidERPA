<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jzg.erp.ui.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar_root">

    </FrameLayout>

    <com.jzg.erp.widget.bottombar.BottomTabGroup
        android:id="@+id/bottom_bar_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height_more"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_vertical_root_bg"
        android:orientation="horizontal"
        android:paddingTop="@dimen/paddingRight">

        <com.jzg.erp.widget.bottombar.BottomTab
            android:id="@+id/tab_05"
            style="@style/bottomTab"
            android:layout_width="@dimen/round_radius"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:drawableTop="@drawable/appraiser_home_bottombar_appraise_selector"
            app:hintEnable="false"
            app:tabText="@string/tab_05" />

        <com.jzg.erp.widget.bottombar.BottomTab
            android:id="@+id/tab_06"
            style="@style/bottomTab"
            android:layout_width="@dimen/round_radius"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:drawableTop="@drawable/appraiser_home_bottombar_car_selector"
            app:hintEnable="false"
            app:tabText="@string/tab_06" />
    </com.jzg.erp.widget.bottombar.BottomTabGroup>

</RelativeLayout>
