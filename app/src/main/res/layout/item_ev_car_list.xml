<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="5dip">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_margin="5dip"
        fresco:placeholderImage="@drawable/no_car"
        fresco:placeholderImageScaleType="fitCenter"
        />

    <TextView
        android:id="@+id/cars_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/sdv"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/grey3"
        android:textSize="@dimen/text_medium_16sp" />

    <TextView
        android:id="@+id/cars_item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cars_item_title"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/sdv"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/grey3"
        android:textSize="@dimen/text_medium_14sp" />

    <LinearLayout
        android:id="@+id/linear_car_item_price_between"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cars_item_company"
        android:layout_toRightOf="@id/sdv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cars_item_carprice_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text=""
            android:textColor="@color/orange_9"
            android:singleLine="true"
            android:textSize="@dimen/text_medium_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="万-"
            android:textColor="@color/grey3"
            android:singleLine="true"
            android:textSize="@dimen/text_medium_14sp" />
        <TextView
            android:id="@+id/cars_item_carprice_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text=""
            android:textColor="@color/orange_9"
            android:singleLine="true"
            android:textSize="@dimen/text_medium_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="万"
            android:textColor="@color/grey3"
            android:singleLine="true"
            android:textSize="@dimen/text_medium_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cars_item_carstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_car_item_price_between"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/sdv"
        android:gravity="center"
        android:text=""
        android:textColor="@color/orange_9"
        android:textSize="@dimen/text_medium_14sp" />
    <TextView
        android:id="@+id/cars_item_cars_chekuang_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_car_item_price_between"
        android:layout_marginLeft="5dip"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="3dip"
        android:textColor="@color/orange_9_1"
        android:textSize="@dimen/text_medium_16sp"
        />

    <TextView
        android:id="@+id/cars_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cars_item_carstatus"
        android:padding="3dip"
        android:text=""
        android:textColor="@color/gray_7"
        android:textSize="@dimen/text_medium_14sp" />

</RelativeLayout>