<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvCarFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_font"
        android:text="宝马 760Li全球限量版4.0L W12"
        android:textSize="@dimen/text_medium_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_medium_14sp"
               android:layout_weight="1"
               android:text="收购价:"
               />
           <TextView
               android:id="@+id/tvPurchasePrice"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_medium_14sp"
               android:layout_weight="1"
               android:text="18.09万"
               android:textColor="@color/common_orange"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_medium_14sp"
               android:layout_weight="1"
               android:gravity="right"
               android:text="评估师:"
               />
           <TextView
               android:id="@+id/tvEvaluator"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_medium_14sp"
               android:paddingLeft="6dp"
               android:layout_weight="1"
               android:text="李山美"
               />
       </LinearLayout>
        <TextView
            android:id="@+id/tvPurchaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_14sp"
            android:layout_weight="3"
            android:text="2016-08-11"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium_14sp"
                android:layout_weight="1"
                android:text="销售价:"
                />
            <TextView
                android:id="@+id/tvSoldPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium_14sp"
                android:layout_weight="1"
                android:text="18.09万"
                android:textColor="@color/common_orange"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium_14sp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="销售顾问:"
                />
            <TextView
                android:id="@+id/tvSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium_14sp"
                android:paddingLeft="6dp"
                android:layout_weight="1"
                android:text="李山美"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvSoldDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_14sp"
            android:layout_weight="3"
            android:text="2016-08-11"
            />

    </LinearLayout>

</LinearLayout>