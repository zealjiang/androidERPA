<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dip"
            android:paddingTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/common_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:text="评估说明" />

                <TextView
                    android:id="@+id/tv_car_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/orange_9"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_car_level_reason"
                style="@style/small_grey_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="5dip" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chekuang_waiguan"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/gujia"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chekuang_lingbujian"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_list_info"
                style="@style/common_grey_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:text="" />

            <com.jzg.erp.appraiser.widget.ListViewForScrollView
                android:id="@+id/lv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/common_gray_line"
                android:dividerHeight="@dimen/dividerHeight"
                android:listSelector="@null"
                android:padding="15dp"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/ll_appearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/common_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:text="外观损伤" />

                <TextView
                    android:id="@+id/tv_appearance"
                    style="@style/small_dark_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dip"
                    android:background="@color/common_gray_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_skeleton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/common_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:text="骨架损伤" />

                <TextView
                    android:id="@+id/tv_skeleton"
                    style="@style/small_dark_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dip"
                    android:background="@color/common_gray_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_inner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/common_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:text="内饰损伤" />

                <TextView
                    android:id="@+id/tv_inner"
                    style="@style/small_dark_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dip"
                    android:background="@color/common_gray_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_maintain_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/common_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:text="主要零部件维修记录" />

                <TextView
                    android:id="@+id/tv_maintail_record"
                    style="@style/small_dark_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dip"
                    android:background="@color/common_gray_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/common_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dip"
                    android:paddingTop="15dip"
                    android:text="工况" />

                <TextView
                    android:id="@+id/tv_condition"
                    style="@style/small_dark_grey_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dip"
                    android:background="@color/common_gray_line"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>