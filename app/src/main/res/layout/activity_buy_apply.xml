<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray_bg"
    android:orientation="vertical"
    tools:context="com.jzg.erp.appraiser.activity.BuyApplyActivity">

    <include layout="@layout/comm_white_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收购价格"
            android:textColor="@color/black_font"
            android:textSize="@dimen/text_medium_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jzg.erp.widget.ClearableEditText
                android:id="@+id/etBuyPrice"
                style="@style/style_common_edittext"
                android:layout_marginRight="60dp"
                android:hint="万元，精确到小数点后2位"
                android:maxLength="8"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="万"
                android:textColor="@color/common_orange"
                android:textSize="@dimen/text_medium_16sp" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="预计整备费"
            android:textColor="@color/black_font"
            android:textSize="@dimen/text_medium_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jzg.erp.widget.ClearableEditText
                android:id="@+id/etZbPrice"
                style="@style/style_common_edittext"
                android:layout_marginRight="60dp"
                android:maxLength="8"
                android:inputType="number"
                android:text="0" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="元"
                android:textColor="@color/common_orange"
                android:textSize="@dimen/text_medium_16sp" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
