<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_purchase_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="收购时间"
            android:textSize="@dimen/text_medium_16sp"
            android:textColor="@color/grey3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="从"
                android:textSize="@dimen/text_medium_16sp"
                android:textColor="@color/grey3" />

            <com.jzg.erp.widget.ClearableEditText
                android:id="@+id/clr_et_time_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:background="@drawable/rounded_edittext"
                android:text=""
                android:textColor="@color/gray_12"
                android:textSize="@dimen/text_medium_14sp"
                android:padding="10dp"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="到"
                android:textSize="@dimen/text_medium_16sp"
                android:textColor="@color/grey3" />

            <com.jzg.erp.widget.ClearableEditText
                android:id="@+id/clr_et_time_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:background="@drawable/rounded_edittext"
                android:text=""
                android:textColor="@color/gray_12"
                android:textSize="@dimen/text_medium_14sp"
                android:padding="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="车牌号"
            android:textSize="@dimen/text_medium_16sp"
            android:textColor="@color/grey3" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/rounded_edittext"
            android:text=""
            android:textColor="@color/gray_12"
            android:textSize="@dimen/text_medium_14sp"
            android:padding="10dp"
            />
    </LinearLayout>

    <com.jzg.erp.widget.CustomRippleButton
        android:id="@+id/btnConfirm"
        style="@style/style_common_blue_round_corner_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:padding="6dp"
        android:text="@string/confirm" />

    <ListView
        android:id="@+id/lv_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/grey2"
        android:dividerHeight="1dip"
        android:padding="10dip"
        android:visibility="gone" />

</LinearLayout>